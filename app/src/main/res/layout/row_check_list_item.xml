<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/row_checklist_bg"
    android:orientation="horizontal"
    android:weightSum="4">

    <ImageButton
        android:id="@+id/checkedView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:background="@drawable/check_bg"
        android:contentDescription="@string/contentdescription"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_done" />

    <ImageButton
        android:id="@+id/uncheckedView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:background="@drawable/unchecked_bg"
        android:contentDescription="@string/contentdescription"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_done" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="10dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/checkTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/checkStatusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="italic" />

    </LinearLayout>

    <TextView
        android:id="@+id/createdTime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:gravity="bottom"
        android:textSize="11sp" />

</LinearLayout>